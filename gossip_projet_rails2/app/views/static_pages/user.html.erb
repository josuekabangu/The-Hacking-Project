<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- Custom CSS -->
    <% stylesheet_link_tag 'application' %>
    <title>The Gossip Project</title>
    <header>
          <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
            <a class="navbar-brand" href="#">The Gossip Project</a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                  <li class="nav-item active">
                    <a class="nav-link" <%= link_to "Home", home_path %><span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" <%= link_to "Team", team_path %></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" <%= link_to "Contact", contact_path %></a>
                  </li>
              </div>
            </nav>
    </header>
  </head>

  <body>
    <div class="container">
  <h1 class="display-4 text-center my-5">The Gossip Project</h1>

  <div class="row justify-content-center">

    <div class="card flex-row flex-wrap">
      <div class="card-header border-0">
        <img src="https://blog.thehackingproject.org/wp-content/uploads/2019/03/short_white-1.png" alt=""
             width="300">
      </div>
      <div class="card-block px-2 mt-4 ml-3">
        <h4 class="card-title h2"><%= @user.first_name %> <%= @user.last_name.upcase %></h4>
        <p class="card-text"><span class="h5">Age : </span><%= @user.age %> ans</p>
        <p class="card-text"><span class="h5">Ville :</span> <%= @user.city.name %></p>
        <p class="card-text"><span class="h5">Email :</span> <a href="mailto:<%= @user.email %>"><%= @user.email %></a></p>
        <p class="card-text"><span class="h5">Description : </span><br /><%= @user.description %></p>
        <a href="#" class="btn btn-info">Envoyer un message priv√©</a>
        <div class="w-100"></div>
      </div>
    </div>
  </div>
    </div>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>

</html> 